@model PostService

@{
    ViewData["Title"] = "Додати оголошення";
}

<div class="container" style="font-family:'Times New Roman', Times, serif; font-size:medium">
    <p>
        <h1>Додати оголошення</h1>
    </p>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="createservice">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Опис</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Створити" class="btn btn-primary float-right" />
                </div>
            </form>
        </div>
    </div>
</div>