@model HotlineViewModel

@{
    ViewData["Title"] = "Контакти";
}

<div class="container" style="font-family:'Times New Roman', Times, serif; font-size:medium">
    <div class="center-block bg-color-blue rounded w-100 py-5">
        <h1 class="text-center text-light" style="text-shadow: 1px 1px 2px black;">Контакти</h1>
    </div>

    <h4 class="text-center mt-3">Гаряча лінія міста</h4>

    <div class="text-center">
        <a href="tel:+38(032)297-59-11">+38(032)297-59-11</a>
        <span>мобільний для користувачів</span>
        <p><i> Lifecell, Kyivstar, Vodafone</i></p>
        <a href="tel:11-80">11-80</a> - стаціонарний номер
    </div>

    <h3 class="text-center my-5">Телефони гарячої лінії для отримання допомоги по районах Львова</h3>

    @foreach (var area in Model.areas)
    {
        <div class="py-3 text-center">
            <h3>@area.Name</h3>
            <div class="row">
                @foreach (var hotline in Model.hotlines)
                {
                    @if (area.AreaID == hotline.Area.AreaID)
                    {
                        <div class="col-12 col-md-4 pt-3">
                            <div>@hotline.Name</div>
                            <a href="tel:@hotline.Number">@hotline.Number</a>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>